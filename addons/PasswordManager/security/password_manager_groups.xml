<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Security Groups -->
        <record id="group_password_manager_user" model="res.groups">
            <field name="name">Password Manager User</field>
            <field name="category_id" ref="base.module_category_tools"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">User can view and manage their own passwords</field>
        </record>

        <record id="group_password_manager_manager" model="res.groups">
            <field name="name">Password Manager Administrator</field>
            <field name="category_id" ref="base.module_category_tools"/>
            <field name="implied_ids" eval="[(4, ref('group_password_manager_user'))]"/>
            <field name="comment">Administrator can manage all passwords and configure encryption settings</field>
        </record>
    </data>
</odoo>
