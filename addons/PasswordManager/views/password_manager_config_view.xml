<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_password_manager_config_form" model="ir.ui.view">
            <field name="name">view.password.manager.config.form</field>
            <field name="model">password.manager.config</field>
            <field name="arch" type="xml">
                <form string="Password Manager Configuration">
                    <header>
                        <button name="action_generate_encryption_key" string="Generate New Key" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g., Production Encryption Key"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Encryption Key">
                                <field name="encryption_key" password="True" placeholder="Click 'Generate New Key' to create automatically" readonly="1"/>
                                <div class="text-muted">
                                    <i class="fa fa-info-circle"/>
 Key is generated automatically and stored securely
                                </div>
                            </group>
                            <group string="Status">
                                <field name="active" widget="boolean_toggle"/>
                                <div class="text-muted">
                                    <i class="fa fa-shield"/>
 Only one configuration can be active at a time
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Information">
                                <div class="alert alert-warning mb-0" role="alert">
                                    <h4 class="alert-heading">
                                        <i class="fa fa-warning"/>
 Important Security Information
                                    </h4>
                                    <ul class="mb-0">
                                        <li>The encryption key must be exactly 44 characters long (32-byte URL-safe base64-encoded)</li>
                                        <li>Click "Generate New Key" button to create a secure key automatically</li>
                                        <li>Changing this key will make all existing passwords unreadable!</li>
                                        <li>Make sure to backup this key in a secure location</li>
                                        <li>Only one configuration can be active at a time</li>
                                    </ul>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_password_manager_config_tree" model="ir.ui.view">
            <field name="name">view.password.manager.config.tree</field>
            <field name="model">password.manager.config</field>
            <field name="arch" type="xml">
                <tree string="Configurations">
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_password_manager_config" model="ir.actions.act_window">
            <field name="name">Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">password.manager.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first encryption configuration
                </p>
                <p>
                    Click the "Generate New Key" button to create a secure encryption key automatically.
                </p>
            </field>
        </record>

        <menuitem id="password_manager_menu_config" name="Configuration" parent="password_manager_menu_root" action="action_password_manager_config" sequence="10" groups="group_password_manager_manager"/>

    </data>
</odoo>
