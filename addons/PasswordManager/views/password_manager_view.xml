<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_password_manager_form" model="ir.ui.view">
            <field name="name">view.password.manager.form</field>
            <field name="model">password.manager</field>
            <field name="arch" type="xml">
                <form string="Password Manager">
                    <header>
                        <button name="action_open_popup" string="ðŸ”“ Show Password" type="object" class="btn-primary" invisible="not password_encrypted"/>
                        <field name="last_updated" widget="datetime" />
                        <field name="password_encrypted" invisible="1"/>
                    </header>

                    <sheet>
                        <group string="Login Details">
                            <field name="name" placeholder="user@example.com"/>
                            <field name="password_plain" password="True" class="oe_inline" placeholder="Enter password to encrypt"/>
                        </group>

                        <group string="Service Information">
                            <field name="service_id" class="oe_inline" options="{'no_create': True, 'no_open': True}"/>
                            <field name="service_url" widget="url" placeholder="https://service.com/login"/>
                        </group>
                        <group string="Additional notes">
                            <field name="notes" placeholder="Additional security notes or reminders"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_password_manager_tree" model="ir.ui.view">
            <field name="name">view.password.manager.tree</field>
            <field name="model">password.manager</field>
            <field name="arch" type="xml">
                <tree string="Password Manager" decoration-muted="not password_encrypted">
                    <field name="service_id" />
                    <field name="name" />
                    <field name="service_url" widget="url" />
                    <field name="last_updated" widget="relative" />
                    <field name="notes" optional="hide" />
                    <field name="password_encrypted" invisible="1" />
                </tree>
            </field>
        </record>

        <record id="view_password_manager_kanban" model="ir.ui.view">
            <field name="name">view.password.manager.kanban</field>
            <field name="model">password.manager</field>
            <field name="arch" type="xml">
                <kanban class="o_custom_password_manager_kanban">
                    <field name="name" />
                    <field name="password_encrypted" />
                    <field name="service_id" />
                    <field name="service_url" />
                    <field name="notes" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click o_kanban_card">
                                <div class="oe_kanban_title" t-if="record.service_id.value">
                                    <strong class="oe_kanban_record_title o_kanban_title_card">
                                        <t t-esc="record.service_id.value"/>
                                        <span class="o_kanban_subtitle_card">(Service)</span>
                                    </strong>
                                </div>
                                <div class="oe_kanban_details o_kanban_block">
                                    <div class="o_kanban_flex">
                                        <div class="o_kanban_content">
                                            <span class="o_kanban_label">User or email</span>
                                            <div class="o_kanban_fake_input">
                                                <field name="name" />
                                            </div>
                                        </div>
                                        <div class="o_kanban_content">
                                            <span class="o_kanban_label">Password</span>
                                            <div class="o_kanban_fake_input">
                                                <span>â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_flex">
                                        <div class="o_kanban_content">
                                            <span class="o_kanban_label">Website or application</span>
                                            <div class="o_kanban_fake_input">
                                                <field name="service_url" />
                                            </div>
                                        </div>
                                        <div class="o_kanban_content">
                                            <span class="o_kanban_label">Notes</span>
                                            <div class="o_kanban_fake_input">
                                                <field name="notes" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>



        <record id="view_password_manager_search" model="ir.ui.view">
            <field name="name">view.password.manager.search</field>
            <field name="model">password.manager</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="User/Email" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="service_id" string="Service"/>
                    <field name="notes" string="Notes"/>
                    <filter string="Recently Updated" name="filter_recent" domain="[('last_updated', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter string="Has Notes" name="filter_has_notes" domain="[('notes', '!=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Service" name="group_by_service" context="{'group_by': 'service_id'}"/>
                        <filter string="Last Updated" name="group_by_last_updated" context="{'group_by': 'last_updated:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_password_manager" model="ir.actions.act_window">
            <field name="name">Password Manager</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">password.manager</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>


        <menuitem id="password_manager_menu_root" name="Password Manager" sequence="10"/>
        <menuitem id="password_manager_menu_passwords" name="Manage Passwords" parent="password_manager_menu_root" action="action_password_manager" sequence="1"/>
    </data>


</odoo>
