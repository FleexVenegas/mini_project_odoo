<odoo>
    <record id="view_config_settings_password_manager" model="ir.ui.view">
        <field name="name">view.config.settings.password.manager</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <!-- <field name="inherit_id" ref="base.res_config_settings_view_form"/> -->
        <field name="arch" type="xml">
            <xpath expr="//block[@name='performance']" position="after">
                <block title="Password Manager" name="password_manager_block">
                    <setting id="encryption_key_setting" help="Key used to encrypt and decrypt stored passwords.">
                        <field name="encryption_key" password="True"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
