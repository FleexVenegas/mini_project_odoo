<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="view_password_services_form" model="ir.ui.view">
            <field name="name">view.password.services.form</field>
            <field name="model">password.services</field>
            <field name="arch" type="xml">
                <form string="Services">
                    <header>
                        <button name="action_view_passwords" string="View Passwords" type="object" class="btn-primary" invisible="password_count == 0"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_passwords" type="object" class="oe_stat_button" icon="fa-key">
                                <field name="password_count" widget="statinfo" string="Passwords"/>
                            </button>
                        </div>
                        <group>
                            <field name="name" placeholder="e.g., Gmail, GitHub, AWS"/>
                            <field name="service_url" widget="url" placeholder="https://example.com"/>
                            <field name="description" placeholder="Optional description or notes about this service"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_password_services_tree" model="ir.ui.view">
            <field name="name">view.password.services.tree</field>
            <field name="model">password.services</field>
            <field name="arch" type="xml">
                <tree string="Services">
                    <field name="name" />
                    <field name="service_url" widget="url" />
                    <field name="password_count" string="Passwords" />
                    <field name="description" optional="hide" />
                </tree>
            </field>
        </record>

        <record id="view_password_services_search" model="ir.ui.view">
            <field name="name">view.password.services.search</field>
            <field name="model">password.services</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Service Name"/>
                    <field name="service_url" string="URL"/>
                    <field name="description" string="Description"/>
                </search>
            </field>
        </record>


        <record id="action_create_password_services" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">password.services</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="password_manager_menu_services" name="Services" parent="password_manager_menu_root" action="action_create_password_services" sequence="2"/>

    </data>

</odoo>