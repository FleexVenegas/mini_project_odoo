<odoo>
    <record id="view_password_popup_form" model="ir.ui.view">
        <field name="name">password.popup.form</field>
        <field name="model">password.popup</field>
        <field name="arch" type="xml">
            <form string="Password Details">
                <sheet>
                    <group>
                        <group>
                            <field name="service_name" readonly="1"/>
                            <field name="username" readonly="1"/>
                        </group>
                        <group>
                            <field name="password_plain" readonly="1" class="o_password_field"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Close" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
