<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_activo_fijo_categoria_tree" model="ir.ui.view">
        <field name="name">activo.fijo.categoria.tree</field>
        <field name="model">activo.fijo.categoria</field>
        <field name="arch" type="xml">
            <tree string="Categorías de Activos">
                <field name="name"/>
                <field name="codigo_prefijo"/>
                <field name="cuenta_contable_default_id"/>
            </tree>
        </field>
    </record>

    <record id="view_activo_fijo_categoria_form" model="ir.ui.view">
        <field name="name">activo.fijo.categoria.form</field>
        <field name="model">activo.fijo.categoria</field>
        <field name="arch" type="xml">
            <form string="Categoría de Activo">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="codigo_prefijo" required="1"/>
                        <field name="cuenta_contable_default_id" 
                               context="{'show_account_type': True}"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_activo_fijo_categoria" model="ir.actions.act_window">
        <field name="name">Categorías de Activos</field>
        <field name="res_model">activo.fijo.categoria</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>