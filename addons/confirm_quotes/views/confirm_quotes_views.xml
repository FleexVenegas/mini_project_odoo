<odoo>
    <data>
        <record id="view_sale_order_tree_mass_confirmation" model="ir.ui.view">
            <field name="name">sale.order.tree.mass.confirmation</field>
            <field name="model">sale.order</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="multi_edit">1</attribute>
                </tree>
                <xpath expr="//tree/header" position="inside">
                    <button name="action_confirm_multiple" type="object" string="Confirm Selected" class="btn-secondary" icon="fa-check-circle" groups="confirm_quotes.group_confirm_quotes_user"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>