<odoo>

    <!-- Acción primero (evita ParseError) -->
    <record id="action_purchasing_requirements" model="ir.actions.act_window">
        <field name="name">PurchasingRequirements</field>
        <field name="res_model">purchasing.requirements</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="view_purchasing_requirements_form" model="ir.ui.view">
        <field name="name">purchasing_requirements.form</field>
        <field name="model">purchasing.requirements</field>
        <field name="arch" type="xml">
            <form js_class="purchasing_preview_form" class="o_purchase_preview_form">

                <header>
                    <button name="action_preview_report" type="object" class="btn-primary" string="Previsualizar PDF (HTML)"/>
                    <button name="action_preview_report_pdf" type="object" class="btn-secondary" string="Abrir PDF"/>
                </header>

                <sheet>
                    <div class="o_pr_layout">

                        <!-- COLUMNA IZQUIERDA: Formulario -->
                        <div class="o_pr_left">
                            <group>
                                <separator string="Información de la Requisición"/>
                                <field name="name"/>
                                <field name="requested_by"/>
                                <field name="department_id"/>
                                <field name="requirement_date"/>
                            </group>

                            <!-- Tabla de Productos -->
                            <notebook>
                                <page string="Productos Solicitados">
                                    <field name="line_ids">
                                        <tree editable="bottom">
                                            <field name="product_name"/>
                                            <field name="quantity"/>
                                            <field name="uom_id"/>
                                            <field name="cost"/>
                                            <field name="subtotal" sum="Total"/>
                                        </tree>
                                    </field>

                                    <group class="oe_subtotal_footer oe_right">
                                        <div class="oe_subtotal_footer_separator oe_inline">
                                            <label for="total_cost" string="Total Estimado"/>
                                            <field name="total_cost" nolabel="1" class="oe_subtotal_footer_separator"/>
                                        </div>
                                    </group>
                                </page>
                            </notebook>

                            <div class="oe_chatter oe_chatter_position_bottom_">
                                <field name="message_follower_ids"/>
                                <field name="activity_ids"/>
                                <field name="message_ids"/>
                            </div>
                        </div>

                        <!-- COLUMNA DERECHA: Preview del PDF -->
                        <div class="o_pr_right">
                            <div class="o_pr_preview_panel">
                                <div name="preview_iframe_container" class="o_pr_preview_container">
                                    <p>Generando vista previa...</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </sheet>

                <!-- <div class="oe_chatter oe_chatter_position_bottom_">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->

            </form>


        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_purchasing_requirements_tree" model="ir.ui.view">
        <field name="name">purchasing_requirements.tree</field>
        <field name="model">purchasing.requirements</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="requested_by"/>
                <field name="department_id"/>
                <field name="requirement_date"/>
                <field name="total_cost" sum="Total" widget="monetary"/>
            </tree>
        </field>
    </record>

    <!-- Menú raíz -->
    <menuitem id="purchasing_requirements_menu_root" name="Purchasing Requirements"/>

    <!-- Submenú -->
    <menuitem id="purchasing_requirements_menu_modelo" name="Registros" parent="purchasing_requirements_menu_root" action="action_purchasing_requirements" />

</odoo>
