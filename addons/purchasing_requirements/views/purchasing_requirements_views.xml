<odoo>

    <!-- Action first (avoid ParseError) -->
    <record id="action_purchasing_requirements" model="ir.actions.act_window">
        <field name="name">Purchase Requisitions</field>
        <field name="res_model">purchasing.requirements</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="view_purchasing_requirements_form" model="ir.ui.view">
        <field name="name">purchasing_requirements.form</field>
        <field name="model">purchasing.requirements</field>
        <field name="arch" type="xml">
            <form js_class="purchasing_preview_form" class="o_purchase_preview_form">

                <header>
                    <button name="action_preview_report" type="object" class="btn-primary" string="HTML Preview"/>
                    <button name="action_preview_report_pdf" type="object" class="btn-secondary" string="Download PDF"/>
                </header>

                <sheet>
                    <div class="o_pr_layout">

                        <!-- COLUMNA IZQUIERDA: Formulario -->
                        <div class="o_pr_left">
                            <group>
                                <separator string="Requisition Information"/>
                                <field name="name" readonly="1"/>
                                <field name="requested_by"/>
                                <field name="department_id"/>
                                <field name="requirement_date"/>
                            </group>

                            <!-- Product Table -->
                            <notebook>
                                <page string="Requested Products">
                                    <field name="line_ids">
                                        <tree editable="bottom">
                                            <field name="product_name"/>
                                            <field name="quantity"/>
                                            <field name="uom_id"/>
                                            <field name="cost"/>
                                            <field name="subtotal" sum="Total"/>
                                        </tree>
                                    </field>

                                    <group class="oe_subtotal_footer oe_right" colspan="2">
                                        <field name="total_cost" widget="monetary" options="{'currency_field': false}" class="oe_subtotal_footer_separator"/>
                                    </group>
                                </page>
                            </notebook>

                            <div class="oe_chatter oe_chatter_position_bottom_">
                                <field name="message_follower_ids"/>
                                <field name="activity_ids"/>
                                <field name="message_ids"/>
                            </div>
                        </div>

                        <!-- RIGHT COLUMN: PDF Preview -->
                        <div class="o_pr_right">
                            <div class="o_pr_preview_panel">
                                <div name="preview_iframe_container" class="o_pr_preview_container">
                                    <p>Generating preview...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_purchasing_requirements_tree" model="ir.ui.view">
        <field name="name">purchasing_requirements.tree</field>
        <field name="model">purchasing.requirements</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="requested_by"/>
                <field name="department_id"/>
                <field name="requirement_date"/>
                <field name="total_cost" sum="Total" widget="monetary"/>
            </tree>
        </field>
    </record>

    <!-- Root Menu -->
    <menuitem id="purchasing_requirements_menu_root" name="Purchase Requisitions"/>

    <!-- Submenu -->
    <menuitem id="purchasing_requirements_menu_modelo" name="Requisitions" parent="purchasing_requirements_menu_root" action="action_purchasing_requirements" />

</odoo>
