<odoo>

    <record id="view_llavero_password_tree" model="ir.ui.view">
        <field name="name">llavero.password.tree</field>
        <field name="model">llavero.password</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
                <field name="description"/>
                <field name="user_id" groups="modulo_llavero.group_llavero_manager"/>
            </tree>
        </field>
    </record>


    <record id="view_llavero_password_form" model="ir.ui.view">
        <field name="name">llavero.password.form</field>
        <field name="model">llavero.password</field>
        <field name="arch" type="xml">
            <form string="Contraseña">
                <sheet>
                    <div class="alert alert-info" role="alert" style="margin-bottom: 16px;">
                        <strong>
                            <i class="fa fa-info-circle" title="Información"></i>
        Uso Institucional Exclusivo
                        </strong>

                        <p style="margin-bottom: 4px; margin-top: 8px;">
        Este llavero está diseñado para almacenar de forma segura
                            <strong>credenciales corporativas y de trabajo</strong>, tales como:
        correos institucionales, accesos a sistemas empresariales y plataformas internas.
                        </p>

                        <p style="margin-bottom: 4px;">
                            <i class="fa fa-lock text-success" title="Seguridad"></i>
                            <strong>Tu información está protegida:</strong>
        nadie puede ver tus contraseñas, <strong>solo tú</strong>.
        Los datos se guardan de manera segura y cifrada.
                        </p>

                        <p style="margin-bottom: 0;">
                            <i class="fa fa-exclamation-triangle text-warning" title="Advertencia"></i>
                            <strong>No se recomienda</strong> almacenar contraseñas o cuentas personales en este sistema.
                        </p>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="password_visible" password="True"/>
                        <field name="description"/>
                        <button name="action_ver_contrasena" string="Ver" type="object" class="oe_highlight" icon="fa-eye"/>
                    </group>
                    <group>
                        <field name="user_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_llavero_password" model="ir.actions.act_window">
        <field name="name">Llavero</field>
        <field name="res_model">llavero.password</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
