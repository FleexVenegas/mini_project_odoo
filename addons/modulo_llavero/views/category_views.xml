<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_key_category_form" model="ir.ui.view">
        <field name="name">key.category.form</field>
        <field name="model">key.category</field>
        <field name="arch" type="xml">
            <form string="Categorias">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_key_category_tree" model="ir.ui.view">
        <field name="name">key.category.tree</field>
        <field name="model">key.category</field>
        <field name="arch" type="xml">
            <tree string="Categorias">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="access_key_category" model="ir.actions.act_window">
        <field name="name">Categorias</field>
        <field name="res_model">key.category</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
