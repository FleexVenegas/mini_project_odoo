<odoo>
    <!-- Grupos de seguridad -->
    <record id="category_llavero" model="ir.module.category">
        <field name="name">Llavero</field>
        <field name="description">Gestión de contraseñas personales</field>
        <field name="sequence">50</field>
    </record>

    <record id="group_llavero_user" model="res.groups">
        <field name="name">Usuario</field>
        <field name="category_id" ref="category_llavero"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_llavero_manager" model="res.groups">
        <field name="name">Gestor (Ver todas las contraseñas)</field>
        <field name="category_id" ref="category_llavero"/>
        <field name="implied_ids" eval="[(4, ref('group_llavero_user'))]"/>
    </record>

    <!-- Reglas de registro -->
    <record id="llavero_password_rule_user" model="ir.rule">
        <field name="name">Usuario: Solo sus propias contraseñas</field>
        <field name="model_id" ref="model_llavero_password"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_llavero_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="llavero_password_rule_manager" model="ir.rule">
        <field name="name">Gestor: Ver todas las contraseñas</field>
        <field name="model_id" ref="model_llavero_password"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_llavero_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Regla para categorías: todos pueden leer, solo managers editan -->
    <record id="key_category_rule_user" model="ir.rule">
        <field name="name">Categorías: lectura para todos</field>
        <field name="model_id" ref="model_key_category"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_llavero_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="key_category_rule_manager" model="ir.rule">
        <field name="name">Categorías: gestión completa para managers</field>
        <field name="model_id" ref="model_key_category"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_llavero_manager'))]"/>
    </record>
</odoo>
