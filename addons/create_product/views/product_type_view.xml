<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_type_view_form" model="ir.ui.view">
            <field name="name">product.type.view.form</field>
            <field name="model">product.type</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="code" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_type_view_tree" model="ir.ui.view">
            <field name="name">product.type.view.tree</field>
            <field name="model">product.type</field>
            <field name="arch" type="xml">
                <tree string="Clasificación">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <record id="action_product_type" model="ir.actions.act_window">
            <field name="name">Tipos</field>
            <field name="res_model">product.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Clasificación
                </p>
                <p>Click 'Nuevo' para añadir nuevos elementos</p>
            </field>
        </record>

        <menuitem id="product_type_menu_root" name="Tipo" action="action_product_type" parent="stock.menu_stock_inventory_control" sequence="10" />


    </data>
</odoo>
