<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view -->
        <record id="view_product_size_form" model="ir.ui.view">
            <field name="name">product.size.form</field>
            <field name="model">product.size</field>
            <field name="arch" type="xml">
                <form string="Size">
                    <sheet>
                        <group>
                            <field name="name" placeholder="E.g.: 100ML, 50ML..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List view -->
        <record id="view_product_size_tree" model="ir.ui.view">
            <field name="name">product.size.tree</field>
            <field name="model">product.size</field>
            <field name="arch" type="xml">
                <tree string="Sizes" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_product_size" model="ir.actions.act_window">
            <field name="name">Product Sizes</field>
            <field name="res_model">product.size</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click "Create" to add a new size
                </p>
                <p>
                    Sizes are used to classify products by their presentation.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_product_size_root" name="Sizes" parent="stock.menu_stock_inventory_control" action="action_product_size" sequence="50" />
    </data>
</odoo>
