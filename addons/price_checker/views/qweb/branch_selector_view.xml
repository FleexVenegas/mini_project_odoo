<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="branch_selector" name="Branch Selector">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure o_branch_selector">
                <div class="branch-selector-container">
                    <div class="branch-selector-header">
                        <h1 class="branch-selector-title">Seleccione su Sucursal</h1>
                        <p class="branch-selector-subtitle">Para continuar, por favor seleccione la sucursal desde donde est√° consultando</p>
                    </div>

                    <div class="branches-grid">
                        <t t-foreach="warehouses" t-as="warehouse">
                            <div class="branch-card" t-att-data-warehouse-id="warehouse.id">
                                <div class="branch-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 21v-7.5a.75.75 0 01.75-.75h3a.75.75 0 01.75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349m-16.5 11.65V9.35m0 0a3.001 3.001 0 003.75-.615A2.993 2.993 0 009.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 002.25 1.016c.896 0 1.7-.393 2.25-1.016a3.001 3.001 0 003.75.614m-16.5 0a3.004 3.004 0 01-.621-4.72L4.318 3.44A1.5 1.5 0 015.378 3h13.243a1.5 1.5 0 011.06.44l1.19 1.189a3 3 0 01-.621 4.72m0 0a3.001 3.001 0 01-3.75.614A2.993 2.993 0 0015 9.75a2.993 2.993 0 00-2.25 1.016A2.993 2.993 0 0010.5 9.75a2.993 2.993 0 00-2.25 1.016A3.001 3.001 0 014.5 9.349" />
                                    </svg>
                                </div>
                                <div class="branch-info">
                                    <h3 class="branch-name" t-esc="warehouse.name"/>
                                    <p class="branch-identifier" t-if="warehouse.identifier_name">
                                        <span t-esc="warehouse.identifier_name"/>
                                    </p>
                                    <p class="branch-location" t-if="warehouse.partner_id">
                                        <t t-if="warehouse.partner_id.city">
                                            <span t-esc="warehouse.partner_id.city"/>
                                        </t>
                                        <t t-if="warehouse.partner_id.state_id">
                                            ,                                            <span t-esc="warehouse.partner_id.state_id.name"/>
                                        </t>
                                    </p>
                                </div>
                                <button class="branch-select-btn" t-att-data-warehouse-id="warehouse.id" t-att-data-warehouse-name="warehouse.name">
                                    Seleccionar
                                </button>
                            </div>
                        </t>
                    </div>

                    <t t-if="not warehouses">
                        <div class="no-branches-message">
                            <p>No hay sucursales disponibles en este momento.</p>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
