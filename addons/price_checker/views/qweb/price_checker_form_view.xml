<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="price_checker_form" name="Price Checker Form">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure o_pricechecker">
                <!-- Formulario de bÃºsqueda elegante -->
                <div class="search-container">
                    <form action="/price-checker" method="get" class="search-form">
                        <input type="text" name="query" class="search-input" placeholder="Ingrese el cÃ³digo de producto o referencia" t-att-value="query or ''" autofocus="autofocus" autocomplete="off"/>
                        <button type="submit" class="search-btn">Consultar</button>
                    </form>
                </div>

                <!-- Resultados elegantes -->
                <div class="results-container">
                    <!-- InformaciÃ³n del producto -->
                    <t t-if="product">
                        <div class="product-name" t-esc="product['name']"/>

                        <div class="product-info" t-if="product.get('sku') or product.get('barcode')">
                            <t t-if="product.get('sku')">
                                Referencia: <span t-esc="product['sku']"/>
                            </t>
                            <t t-if="product.get('barcode')">
                                <t t-if="product.get('sku')"> â€¢ </t>
                                CÃ³digo: <span t-esc="product['barcode']"/>
                            </t>
                        </div>

                        <div class="product-details">

                            <div class="product-image-container">
                                <t t-if="product.get('image_1920')">
                                    <img t-att-src="'data:image/png;base64,' + product['image_1920']" class="product-image"/>
                                </t>
                                <t t-else="">
                                    <img t-att-src="'/price_checker/static/src/img/generic_1.png'" class="product-image product-image-generic"/>
                                </t>
                            </div>
                            <!-- Precios en tarjetas elegantes -->
                            <div class="prices-grid">
                                <t t-foreach="prices.items()" t-as="price_item">
                                    <t t-set="price_name" t-value="price_item[0]"/>
                                    <t t-set="price_data" t-value="price_item[1]"/>
                                    <!-- Manejar tanto diccionarios como valores simples -->
                                    <t t-set="price_value" t-value="price_data['value'] if isinstance(price_data, dict) else price_data"/>
                                    <t t-set="conditional_label" t-value="price_data.get('label', '') if isinstance(price_data, dict) else ''"/>

                                    <div t-att-class="'price-card ' + ('zero-price' if price_value == 0 else '')">
                                        <div class="price-name">
                                            <t t-esc="price_name"/>
                                        </div>

                                        <div t-att-class="'price-value' + (' without_price' if price_value == 0 else '')">
                                            <t t-if="price_value == 0">Consulte disponibilidad</t>
                                            <t t-else="">
                                                $                                                <t t-esc="'{:,.2f}'.format(price_value)"/>
                                            </t>
                                        </div>
                                        <div class="price-label">
                                            <t t-if="price_value == 0">Precio no disponible</t>
                                            <t t-else="">Precio con IVA incluido</t>
                                        </div>

                                        <!-- Etiqueta condicional si estÃ¡ habilitada -->
                                        <div t-if="conditional_label" class="conditional-label">
                                            ðŸ’¡                                            <t t-esc="conditional_label"/>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>

                    </t>

                    <t t-if="error_message">
                        <div class="message error-message">
                            <div style="font-size: 1.2rem; margin-bottom: 0.5rem;">Producto no encontrado</div>
                            <div style="opacity: 0.8;" t-esc="error_message"/>
                        </div>
                    </t>

                    <t t-if="not product and not error_message">
                        <div class="welcome-message">
                            <div>Consulta de Precios - SOLOFRAGANCIAS</div>
                            <div style="font-size: 1.3rem; margin-top: 1rem; opacity: 0.8;">
                                Busque por cÃ³digo de producto o referencia
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>