<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="price_checker_form" name="Price Checker Form">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure o_pricechecker">
                <!-- Formulario de búsqueda elegante -->
                <div class="search-container">
                    <form action="/price-checker" method="get" class="search-form">
                        <input type="text" name="query" class="search-input" placeholder="Ingrese el código de producto o referencia" t-att-value="query or ''" autofocus="autofocus" autocomplete="off"/>
                        <button type="submit" class="search-btn">Consultar</button>
                    </form>
                </div>

                <!-- Resultados elegantes -->
                <div class="results-container">
                    <!-- Información del producto -->
                    <t t-if="product">
                        <div class="product-name" t-esc="product['name']"/>

                        <div class="product-info" t-if="product.get('sku') or product.get('barcode')">
                            <t t-if="product.get('sku')">
                                Referencia: <span t-esc="product['sku']"/>
                            </t>
                            <t t-if="product.get('barcode')">
                                <t t-if="product.get('sku')"> • </t>
                                Código: <span t-esc="product['barcode']"/>
                            </t>
                        </div>

                        <!-- Precios en tarjetas elegantes -->
                        <div class="prices-grid">
                            <t t-foreach="prices.items()" t-as="price_item">
                                <t t-set="price_name" t-value="price_item[0]"/>
                                <t t-set="price_value" t-value="price_item[1]"/>
                                <t t-set="price_class" t-value="'price-high' if price_name == 'High Runner' else ('price-medium' if price_name == 'Medio mayoreo' else 'price-low')"/>

                                <div t-att-class="'price-card ' + (price_class if price_value > 0 else 'zero-price')">
                                    <div class="price-name">
                                        <t t-if="price_name == 'High Runner'">High Runner</t>
                                        <t t-elif="price_name == 'Medio mayoreo'">Medio mayoreo</t>
                                        <t t-elif="price_name == 'Mayoreo'">Mayoreo</t>
                                        <t t-else="" t-esc="price_name"/>
                                    </div>
                                    <div t-att-class="'price-value ' + price_class + (' without_price' if price_value == 0 else '')">
                                        <t t-if="price_value == 0">Consulte disponibilidad</t>
                                        <t t-else="">$                                            <t t-esc="'{:,.2f}'.format(price_value)"/>
                                        </t>
                                    </div>
                                    <div class="price-label">
                                        <t t-if="price_value == 0">Precio no disponible</t>
                                        <t t-else="">Precio con IVA incluido</t>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>

                    <t t-if="error_message">
                        <div class="message error-message">
                            <div style="font-size: 1.2rem; margin-bottom: 0.5rem;">Producto no encontrado</div>
                            <div style="opacity: 0.8;" t-esc="error_message"/>
                        </div>
                    </t>

                    <t t-if="not product and not error_message">
                        <div class="welcome-message">
                            <div>Consulta de Precios - SOLOFRAGANCIAS</div>
                            <div style="font-size: 1.3rem; margin-top: 1rem; opacity: 0.8;">
                                Busque por código de producto o referencia
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>