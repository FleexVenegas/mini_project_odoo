<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_form_inherit_sd" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.sd</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- Insertamos debajo del campo payment_term_id -->
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="is_sd_store" invisible="1"/>
                <field name="sd_warehouse_id" invisible="not is_sd_store"/>
            </xpath>

        </field>
    </record>
</odoo>
