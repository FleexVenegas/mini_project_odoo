<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_help_desk_report_wizard_form" model="ir.ui.view">
        <field name="name">help.desk.report.wizard.form</field>
        <field name="model">help.desk.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Ticket time analysis">
                <group>
                    <field name="user_id"/>
                    <!-- <field name="file_data"/> -->
                    <field name="file_name"/>
                </group>

                <footer>
                    <button string="Cancel" special="cancel"/>
                    <button name="action_download" string="Download" type="object" class="btn-primary" />
                </footer>
            </form>
        </field>
    </record>


    <record id="action_help_desk_report_wizard" model="ir.actions.act_window">
        <field name="name">Ticket time analysis</field>
        <field name="res_model">help.desk.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_help_desk_report_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
