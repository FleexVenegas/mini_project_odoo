<odoo>
    <record id="ir_cron_auto_attendance" model="ir.cron">
        <field name="name">Send Assistance by Email</field>
        <field name="model_id" ref="model_auto_attendance_config"/>
        <field name="state">code</field>
        <field name="code">model.action_send_attendance()</field>
        <field name="active">True</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">False</field>
    </record>
</odoo>
